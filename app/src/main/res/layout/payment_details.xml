<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#CCE0EF"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Payment Date" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Payment ID" />

                <TextView
                    android:id="@+id/id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date_layout"
                android:layout_marginTop="8dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txt_delear_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="Delear Name: "
                    android:textColor="#0640e0" />

                <TextView
                    android:id="@+id/delear_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txt_delear_name"
                    android:gravity="end"
                    android:textColor="#0640e0" />

                <TextView
                    android:id="@+id/txt_naration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/delear_name"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Naration" />

                <TextView
                    android:id="@+id/naration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/delear_name"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/txt_naration"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txt_no_of_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/naration"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="No Of All: " />

                <TextView
                    android:id="@+id/no_of_call"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/naration"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/txt_no_of_call"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/no_of_call"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Amount: " />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/no_of_call"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/txt_amount"
                    android:gravity="end" />

            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>